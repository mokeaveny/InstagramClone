services:
  instagramclone.api:
    build:
      context: .
      dockerfile: InstagramClone.Api/Dockerfile
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      ASPNETCORE_URLS: https://+:443;http://+:80
    image: instagramcloneapi
    ports:
    - mode: ingress
      target: 80
      protocol: tcp
    - mode: ingress
      target: 443
      protocol: tcp
    volumes:
    - type: bind
      source: C:\Users\micha\AppData\Roaming/Microsoft/UserSecrets
      target: /root/.microsoft/usersecrets
      read_only: true
      bind:
        create_host_path: true
    - type: bind
      source: C:\Users\micha\AppData\Roaming/ASP.NET/Https
      target: /root/.aspnet/https
      read_only: true
      bind:
        create_host_path: true
  sql_in_dc:
    build:
      context: .
      dockerfile: sql/sql.Dockerfile
    environment:
      ACCEPT_EULA: "Y"
      SA_PASSWORD: abcDEF123#
    ports:
    - mode: ingress
      target: 1433
      published: 1440
      protocol: tcp
    restart: always