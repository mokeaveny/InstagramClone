@model IEnumerable<Post>

<div class="text-center">
    <h1>All Users Can Be Seen Below</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>UserId</th>
                <th>Image</th>
                <th>Caption</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var post in Model)
            {
                <tr>
                    <td>@post.Id</td>
                    <td>@post.UserId</td>
                    <td><img src="@post.ImagePath" width="200px" height="200px" /></td>
                    <td>@post.Caption</td>
                    <td><a asp-controller="Posts" asp-action="Delete" asp-route-postId="@post.Id" 
                           asp-route-imagePath="@post.ImagePath">Delete Post</a></td>
                </tr>
            }
        </tbody>
    </table>
    <td><a asp-controller="Posts" asp-action="CreatePage" asp-route-userId="@Model.First().UserId">Create Post</a></td>
</div>

<div id="app">
</div>

<script>
    const app = Vue.createApp({
        data() {
            return {
                users: [
                ]
            }
        }
    })

    app.mount('#app')
</script>